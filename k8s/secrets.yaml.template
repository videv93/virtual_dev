# This is a template file. Create secrets.yaml from this template
# DO NOT commit secrets.yaml to version control!
#
# To create secrets.yaml:
# 1. Copy this file to secrets.yaml
# 2. Replace the base64-encoded placeholder values with actual secrets
# 3. To encode a secret: echo -n "your-secret" | base64
#
# To apply: kubectl apply -f k8s/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: virtual-dev-secrets
  namespace: virtual-dev
type: Opaque
data:
  # Supabase secrets (base64 encoded)
  SUPABASE_SERVICE_KEY: <base64-encoded-service-key>
  SUPABASE_ANON_KEY: <base64-encoded-anon-key>

  # Anthropic API key (base64 encoded)
  ANTHROPIC_API_KEY: <base64-encoded-api-key>

  # Redis password (if using authentication)
  REDIS_PASSWORD: <base64-encoded-redis-password>

  # JWT secret for session management
  JWT_SECRET: <base64-encoded-jwt-secret>

  # Optional: Database credentials if not using Supabase
  # DATABASE_URL: <base64-encoded-database-url>
